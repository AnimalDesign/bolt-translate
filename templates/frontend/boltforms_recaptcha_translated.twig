{% macro recaptcha(recaptcha) %}
    {% if recaptcha.enabled %}
        {% if not recaptcha.valid %}
            <ul class="boltform-error">
                <li class="boltform-error">{{ app.request.get('_locale') is null ? recaptcha.error_message : l(recaptcha.error_message) }}</li>
            </ul>
        {% endif %}

        {% if recaptcha.type == 'v2' %}
            <div class="boltform-row">
                <label for="form_message" class="required">{{ app.request.get('_locale') is null ? recaptcha.label : l(recaptcha.label) }}</label>
                <div class="g-recaptcha is-relative" data-sitekey="{{ recaptcha.public_key }}"></div>
            </div>
        {% endif %}
    {% endif %}
{% endmacro %}
